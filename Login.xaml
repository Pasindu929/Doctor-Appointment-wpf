<Window x:Class="DoctorAppointment.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Login" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Center">
            <TextBlock Text="Admin Login" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Username:"/>
            <TextBox Name="txtUsername" Width="300" Height="30" Margin="5"/>

            <TextBlock Text="Password:"/>
            <PasswordBox Name="txtPassword" Width="300" Height="30" Margin="5"/>

            <Button Content="Login" Width="200" Height="40" Margin="10" Click="Login_Click"/>
            <Button Content="Back" Width="200" Height="40" Margin="10" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Window>
