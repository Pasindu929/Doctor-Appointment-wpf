<Window x:Class="DoctorAppointment.RemoveDoctor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Remove Doctor" Height="250" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Doctor Name:"/>
            <TextBox Name="txtDoctorName" Width="300" Height="30" Margin="5"/>

            <Button Content="Remove Doctor" Width="200" Height="40" Margin="10" Click="RemoveDoctor_Click"/>
            <Button Content="Back" Width="200" Height="40" Margin="10" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Window>
