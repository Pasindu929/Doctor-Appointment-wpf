<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="DoctorAppointment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Doctor Appointment" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Admin-Sign in" Width="200" Height="50" Margin="10" Click="AdminSignIn_Click"/>
            <Button Content="Admin-Login" Width="200" Height="50" Margin="10" Click="AdminLogin_Click"/>
        </StackPanel>

        <DockPanel VerticalAlignment="Bottom" Background="LightGray" Height="40">
            <TextBlock Text="© 2025 Doctor Appointment System" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </DockPanel>
    </Grid>
</Window>
